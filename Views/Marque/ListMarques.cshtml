
@{
    Layout = null;
}

<link href="//cdn.datatables.net/1.11.4/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<nav class="navbar navbar-dark bg-dark">

    <!-- Navbar content -->
    <div style="color:white;height:70px;font-size: 1.2em;padding:1%;margin:1%">
        <a class="navbar-brand" href='@Url.Action("Dashboard","Client")'>
            <img src="~/Content/logo.png" width="50" height="50" alt="">
            Plan de travail
        </a>
    </div>
    <form action='@Url.Action("Index","Produit")' class="form-inline">

        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Log out</button>
    </form>
</nav>
<div class="container">
    <h1 style="text-align:center">La liste des marques </h1>
    <a class="btn btn-secondary" style="margin-bottom:20px" href='@Url.Action("AjoutModifieMarque","Marque")'><i class="fa fa-plus"></i>Ajouter une nouvelle marque</a>
    <table id="Cli" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Nom</th>
                
                <th></th>
            </tr>
        </thead>
    </table>

    <script>
    $(document).ready(function () {
        $('#Cli').DataTable({
            "ajax": {
                "url": "/Marque/GetMarques",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "Nom" },
              
                {
                    "data": "MarqueID", "render": function (data) {
                        return "<a class='btn btn-default btn-sm' href='@Url.Action("AjoutModifieMarque","Marque")?id="+ data +"'><i class='fa fa-pencil'></i> Edit</a><a class='btn btn-danger btn-sm' style='margin-left:5px' href='@Url.Action("supprimerMarque", "Marque")?id="+data+"'><i class='fa fa-trash'></i> Delete</a>";
                    },
                        "orderable": false,
                        "searchable":false,
                        "width":"150px"
                    }
            ],
        });
    });




    </script>

</div>